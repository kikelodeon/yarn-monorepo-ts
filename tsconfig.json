{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
    "@custom/shared/*": ["packages/shared/src/*"]  // Ensure this points to "src" during TypeScript build
    }
  },
  "include": ["packages/**/*"],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/authentication-service" }
  ]
}
